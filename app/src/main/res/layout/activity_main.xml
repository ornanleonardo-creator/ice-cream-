<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- TITRE -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scanner IA – Professeur"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="20dp"/>

        <!-- MODE -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mode de travail"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <RadioGroup
            android:id="@+id/rgMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/modeReference"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Référence professeur"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/modeIA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Correction IA"/>

            <RadioButton
                android:id="@+id/modeManuel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scan notes manuelles"/>
        </RadioGroup>

        <!-- ACTIONS -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Actions"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/btnScanProf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scanner copie professeur"/>

        <Button
            android:id="@+id/btnScanEleve"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scanner copie élève"/>

        <Button
            android:id="@+id/btnScanNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scanner note corrigée"/>

        <!-- INFORMATIONS -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Informations détectées"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/etNom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nom de l’élève"
            android:inputType="textPersonName"/>

        <EditText
            android:id="@+id/etClasse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Classe"
            android:inputType="text"/>

        <EditText
            android:id="@+id/etMatiere"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Matière"
            android:inputType="text"/>

        <EditText
            android:id="@+id/etNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Note / Cote"
            android:inputType="numberDecimal"/>

        <EditText
            android:id="@+id/etComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Commentaire"
            android:inputType="textMultiLine"/>

        <!-- VALIDATION -->
        <Button
            android:id="@+id/btnValider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Valider &amp; enregistrer"
            android:layout_marginTop="12dp"/>

        <!-- GESTION -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gestion"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/btnGrille"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Voir grille des notes"/>

        <Button
            android:id="@+id/btnHistorique"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Historique"/>

        <Button
            android:id="@+id/btnExport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Export PDF / Excel"/>

        <Button
            android:id="@+id/btnSync"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Synchronisation"/>

    </LinearLayout>
</ScrollView>
